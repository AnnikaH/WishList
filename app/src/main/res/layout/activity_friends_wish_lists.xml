<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FriendsWishListsActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin" >

    <ListView
        android:layout_marginBottom="@dimen/list_view_margin_bottom"
        android:id="@+id/friendsListsListView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_list_view">
    </ListView>

    <!-- Buttons -->
    <Button
        android:textAllCaps="false"
        android:layout_margin="@dimen/button_margin"
        android:text="@string/received_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="receivedRequests"
        android:background="@drawable/shape_register_button" />

    <Button
        android:textAllCaps="false"
        android:layout_margin="@dimen/button_margin"
        android:text="@string/find_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="findFriends"
        android:background="@drawable/shape_friends_wish_lists_button" />

    <!-- Header friends' wish lists that you have access to: -->
    <!-- <TextView
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingTop="@dimen/button_margin"
        android:text="@string/friends_wish_lists_access"
        android:textSize="@dimen/text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

</LinearLayout>