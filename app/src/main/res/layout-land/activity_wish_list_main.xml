<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WishListMainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView android:text="@string/app_name"
        android:typeface="serif"
        android:textSize="@dimen/header_main_text_size"
        android:textColor="@color/header_main_text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/header_main_padding_bottom"
        android:paddingTop="@dimen/header_main_padding_top_land" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- My profile: -->
        <LinearLayout
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/main_button_height"
            android:onClick="profileClicked"
            android:orientation="horizontal"
            android:layout_margin="@dimen/main_button_margin"
            android:gravity="center"
            android:background="@drawable/shape_profile" >

            <Button
                android:layout_width="@dimen/main_image_width"
                android:layout_height="@dimen/main_image_height"
                android:background="@drawable/user_100_light"
                android:onClick="profileClicked" />

        </LinearLayout>

        <!-- My wish lists: -->
        <LinearLayout
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/main_button_height"
            android:onClick="myWishListsClicked"
            android:orientation="horizontal"
            android:layout_margin="@dimen/main_button_margin"
            android:gravity="center"
            android:background="@drawable/shape_wish_lists" >

            <Button
                android:layout_width="@dimen/main_image_width"
                android:layout_height="@dimen/main_image_height"
                android:background="@drawable/list_lollipop_100_light"
                android:onClick="myWishListsClicked" />

        </LinearLayout>

        <!-- Tips friends : -->
        <LinearLayout
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/main_button_height"
            android:onClick="tipsFriendsClicked"
            android:orientation="horizontal"
            android:layout_margin="@dimen/main_button_margin"
            android:gravity="center"
            android:background="@drawable/shape_tips" >

            <Button
                android:layout_width="@dimen/main_image_width"
                android:layout_height="@dimen/main_image_height"
                android:background="@drawable/tips_100_light"
                android:onClick="tipsFriendsClicked" />

        </LinearLayout>

        <!-- Friends and their wish lists: -->
        <LinearLayout
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/main_button_height"
            android:onClick="friendsWishListsClicked"
            android:orientation="horizontal"
            android:layout_margin="@dimen/main_button_margin"
            android:gravity="center"
            android:background="@drawable/shape_friends_wish_lists" >

            <Button
                android:layout_width="@dimen/main_image_width"
                android:layout_height="@dimen/main_image_height"
                android:background="@drawable/user_group_100_light"
                android:onClick="friendsWishListsClicked" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>