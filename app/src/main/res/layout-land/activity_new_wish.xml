<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewWishActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/name"
                android:labelFor="@+id/wishName"
                android:layout_width="@dimen/text_view_half_width_land"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/wishName"
                android:inputType="text"
                android:layout_width="@dimen/edit_text_half_width"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_horizontal"
                android:text="@string/price"
                android:labelFor="@+id/wishPrice"
                android:layout_width="@dimen/text_view_half_width_land"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/wishPrice"
                android:inputType="numberDecimal"
                android:layout_width="@dimen/edit_text_half_width"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/spesification"
                android:labelFor="@+id/wishSpesification"
                android:layout_width="@dimen/text_view_width_land"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/wishSpesification"
                android:inputType="text"
                android:layout_width="@dimen/edit_text_width"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/where"
                android:labelFor="@+id/wishWhere"
                android:layout_width="@dimen/text_view_half_width_land"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/wishWhere"
                android:inputType="text"
                android:layout_width="@dimen/edit_text_half_width"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_horizontal"
                android:text="@string/link"
                android:labelFor="@+id/wishLink"
                android:layout_width="@dimen/text_view_half_width_land"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/wishLink"
                android:inputType="text"
                android:layout_width="@dimen/edit_text_half_width"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_margin="@dimen/button_margin"
                android:text="@string/register"
                android:layout_width="@dimen/button_width_land"
                android:layout_height="wrap_content"
                android:onClick="registerNewWish"
                android:textAllCaps="false"
                android:background="@drawable/shape_register_button" />

            <Button
                android:layout_margin="@dimen/button_margin"
                android:text="@string/cancel"
                android:layout_width="@dimen/button_width_land"
                android:layout_height="wrap_content"
                android:onClick="cancelNewWish"
                android:textAllCaps="false"
                android:background="@drawable/shape_cancel_button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>