<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.annika.wishlist" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WishListMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ProfileActivity"
            android:label="@string/my_profile"
            android:parentActivityName=".WishListMainActivity" >
        </activity>

        <activity android:name=".MyWishListsActivity"
            android:label="@string/my_wish_lists"
            android:parentActivityName=".WishListMainActivity" >
        </activity>

        <activity android:name=".TipsFriendsActivity"
            android:label="@string/tips_friends"
            android:parentActivityName=".WishListMainActivity" >
        </activity>

        <activity android:name=".FriendsWishListsActivity"
            android:label="@string/friends_wish_lists"
            android:parentActivityName=".WishListMainActivity" >
        </activity>

        <activity android:name=".SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".WishListMainActivity" >
        </activity>

    </application>

</manifest>